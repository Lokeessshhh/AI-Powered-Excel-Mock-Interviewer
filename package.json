{
  "name": "ai-excel-interviewer",
  "version": "1.0.0",
  "description": "AI-Powered Excel Mock Interviewer PoC",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev:shared && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:shared": "cd shared && npm run build",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && npm install --prefix shared && npm install --prefix backend && npm install --prefix frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}